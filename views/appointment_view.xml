<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0">
                <field name="patient_id"/>
                <field name="gender"/>
                <field name="booking_date"/>
                <field name="appointment_time"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
<!--            <form create="0" delete="0" edit="0">-->
            <form >
                <header>
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}"
                           statusbar_visible="draft,in_consultation,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="gender"/>
                            <button name="action_test" string="Object Button" type="object"
                                    help="On clicking this button a message will be printed in console"
                                    confirm="Are sure to execute the Python Code?" class="oe_highlight"/>
                            <button name="%(bm_hospital.action_hospital_patient)d" string="Action Button"
                                    help="On clicking this button you will be redirected to patients records"
                                    confirm="Are sure to open the Patients window ?" type="action" class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="booking_date"/>
                            <field name="appointment_time"/>
                            <field name="ref"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Prescriptions" name="prescription">
                            <field name="prescription" placeholder="Enter your prescription"/>
                        </page>
                        <page string="Pharmacy" name="pharmacy"></page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent">
                Create your first appointment !
            </p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointments"
              parent="menu_appointment_master"
              action="action_hospital_appointment"
              groups=""
              sequence="0"/>

</odoo>